<%- include('header') %>

<% if (error.status === 404) { %>
  <div class="error-container">
    <h1 class="error-title">¡Oops! Página no encontrada</h1>
    <p class="error-message">La página que buscas no existe o ha sido movida.</p>
    <a href="/" class="back-home">Volver a la página principal</a>
  </div>
<% } else if (error.status === 500) { %>
  <div class="error-container">
    <h1 class="error-title">¡Ups! Algo salió mal</h1>
    <p class="error-message">Parece que hubo un problema en el servidor. Estamos trabajando para solucionarlo.</p>
    <a href="/" class="back-home">Volver a la página principal</a>
  </div>
<% } else { %>
  <div class="error-container">
    <h1 class="error-title">Error</h1>
    <p class="error-message"><%= message %></p>
    <p class="error-details">Código de error: <%= error.status %></p>
    <pre class="error-stack"><%= error.stack %></pre>
    <a href="/" class="back-home">Volver a la página principal</a>
  </div>
<% } %>

<%- include('footer') %>

<style>
  .error-container {
    text-align: center;
    padding: 50px;
    background-color: #f8f8f8;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    max-width: 600px;
    margin: 0 auto;
  }
  .error-title {
    font-size: 2.5rem;
    font-weight: bold;
    color: #e74c3c;
  }
  .error-message {
    font-size: 1.2rem;
    margin: 20px 0;
    color: #333;
  }
  .error-details {
    font-size: 1rem;
    color: #555;
  }
  .error-stack {
    font-family: monospace;
    background-color: #f1f1f1;
    padding: 15px;
    border-radius: 5px;
    overflow-x: auto;
    margin-top: 20px;
  }
  .back-home {
    display: inline-block;
    margin-top: 20px;
    padding: 10px 20px;
    background-color: #3498db;
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
  }
  .back-home:hover {
    background-color: #2980b9;
  }
</style>

